<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fab_marginMedio"
        android:layout_marginTop="@dimen/setentaycincodp"
        android:layout_marginEnd="@dimen/fab_marginMedio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_info"></TextView>

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_top_formacion_individual"></androidx.legacy.widget.Space>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more_about_info"></TextView>

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_top_formacion_individual"></androidx.legacy.widget.Space>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/another_about_info"></TextView>

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="@dimen/diezdp"></androidx.legacy.widget.Space>

            <TextView
                android:id="@+id/correo_contacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correo_contacto"
                android:onClick="mandarCorreo"></TextView>

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>