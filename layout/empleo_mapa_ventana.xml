<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:id="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fuenteImg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cientotreintadp"
                android:layout_marginTop="@dimen/fab_marginCuarto"
                ></ImageView>

            <TextView
                android:id="@+id/textView_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/fab_margin2"
                android:layout_marginTop="@dimen/margin_top_formacion_individual"
                android:autoLink="web"
                android:linksClickable="true"
                android:text="TITULO OFERTA"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/textView_materia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/fab_margin2"
                android:layout_marginTop="@dimen/fab_marginOctavoMedio"
                android:autoLink="web"
                android:linksClickable="true"
                android:text="MATERIA OFERTA"
                android:textColor="@color/outButton"></TextView>

            <TextView
                android:id="@+id/textView_fechas"
                android:linksClickable="false"
                android:text="FECHA PUBLICACION"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/fab_margin2"
                android:layout_marginTop="@dimen/fab_marginCuarto"></TextView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/fab_margin2"
                android:layout_marginTop="@dimen/fab_margin"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_duracion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:linksClickable="true"
                        android:textStyle="italic"
                        />
                    <TextView
                        android:id="@+id/textView_destinatarios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:linksClickable="true"
                        android:textStyle="italic"
                        />
                    <TextView
                        android:id="@+id/textView_inscripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:linksClickable="true"
                        />
                </LinearLayout>

            </ScrollView>




        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>